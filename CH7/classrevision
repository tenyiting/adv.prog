from classrevision import person

class Manager (Person): 
    def giveRaise(self, percent, bonus=0.1): 
        self.pay*= (1.0+ percent + bonus)

if _name_ == '_main_':
    tom = Manager (name= 'Tom Doe', age=50, pay=50000) 
    print(tom.lastName())
    tom.giveRaise(.20)
    print(tom.pay)

